<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >


<TextView android:id="@+id/HelpLabel" android:text="@string/HelpLabelText" android:textStyle="bold" android:layout_width="fill_parent" android:layout_weight="0.1" android:layout_height="wrap_content"></TextView><TextView android:layout_height="wrap_content" android:singleLine="false" android:textStyle="normal" android:id="@+id/ExplanationLabel" android:layout_weight="1" android:text="@string/LongerExplanation" android:layout_width="fill_parent"></TextView>

<Button android:id="@+id/ButtonOK" android:text="OK" android:layout_height="wrap_content" android:layout_gravity="center_vertical" android:layout_width="fill_parent" android:layout_weight="0.025"></Button>
</LinearLayout>
